<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg1">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:id="@+id/relativeLayout2"
        android:background="@mipmap/logo"
        android:layout_alignTop="@+id/relativeLayout5"
        android:layout_alignParentEnd="true"></RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="650dp"
        android:id="@+id/relativeLayout3"
        android:layout_alignTop="@+id/relativeLayout6"
        android:layout_alignParentEnd="true">

        <ListView
            android:id="@+id/categories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"></ListView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:id="@+id/relativeLayout4"
        android:background="#fff"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AD 1"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignTop="@+id/relativeLayout4"
        android:layout_alignStart="@+id/footer"
        android:id="@+id/relativeLayout5"
        android:background="#fff"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AD 2"
            android:textSize="25sp"
            android:textStyle="bold"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="515dp"
        android:layout_height="250dp"
        android:background="#fff"
        android:id="@+id/relativeLayout6"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignStart="@+id/relativeLayout4"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AD 3"
            android:textSize="25sp"
            android:textStyle="bold"/>


</RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#fff"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/relativeLayout6"
        android:layout_alignEnd="@+id/relativeLayout6"
        android:id="@+id/relativeLayout7"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AD 5"
            android:textSize="25sp"
            android:textStyle="bold"/>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#fff"
        android:layout_alignTop="@+id/relativeLayout7"
        android:layout_alignStart="@+id/relativeLayout6"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AD 4"
            android:textSize="25sp"
            android:textStyle="bold"/>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="515dp"
        android:layout_height="250dp"
        android:background="#fff"
        android:layout_below="@+id/relativeLayout7"
        android:layout_alignEnd="@+id/footer"
        android:layout_marginTop="21dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AD 6"
            android:textSize="25sp"
            android:textStyle="bold"/>


</RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:background="@mipmap/avocadowhite"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </RelativeLayout>

</RelativeLayout>